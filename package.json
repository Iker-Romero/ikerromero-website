    "axios": "^1.4.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.9",
    "dotenv": "^16.3.1",
    "lucide-react": "^0.563.0",
    "mongoose": "^7.4.3",
    "negotiator": "^0.6.3",
    "next": "^14.1.0",
    "next-intl": "latest",
    "nodemailer": "^6.9.7",
    "posthog-js": "^1.336.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.45.4",
