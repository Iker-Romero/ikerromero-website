    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.0.1",
    "typescript": "5.1.6"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "cross-env ESLINT_USE_FLAT_CONFIG=true eslint --config eslint.config.canonical.mjs --fix",
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": "prettier --write"
  }
}
