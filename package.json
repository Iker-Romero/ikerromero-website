    "format": "prettier --write .",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:canonical": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint --config eslint.config.canonical.mjs src",
    "lint:canonical:fix": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint --config eslint.config.canonical.mjs src --fix",
